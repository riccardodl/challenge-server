@page "{id:int?}"
@model BackendService.Pages.Ships.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ship</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ship.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ship.Name)
        </dd>

        <dd>
            <table class="table">
                <tr>
                    <th>Ropes</th>
                </tr>
                @foreach (var rope in Model.Ship.Ropes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => rope.AddedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => rope.Probability)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => rope.Tag)
                        </td>
                        @foreach (var image in rope.Images)
                        {
                            <td>
                                @Html.DisplayFor(modelItem => image.RawImage)
                            </td>
                        }
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Ship.ShipID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
